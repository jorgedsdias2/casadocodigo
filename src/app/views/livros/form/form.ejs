<html>
    <body>

        <h1>Cadastro de Livros</h1>

        <form action="/livros" method="post">
            <% if(livro.id) { %>
                <div>
                    <input type="hidden" name="_method" value="PUT">
                    <input type="hidden" id="id" name="id" value="<%= livro.id %>" />
                </div>
            <% } %>

            <div>
                <label for="titulo">Titulo:</label>
                <input type="text" id="titulo" name="titulo" value="<%= livro.titulo %>" placeholder="coloque o titulo do livro">
            </div>
            <div>
                <label for="preco">Preço:</label>
                <input type="text" id="preco" name="preco" value="<%= livro.preco %>" placeholder="coloque o preco do livro">
            </div>        
            <div>
                <label for="descricao">Descrição:</label>
                <textarea cols="20" rows="10" id="descricao" name="descricao"><%= livro.descricao %></textarea>
            </div>

            <input type="submit" value="Salvar">
        </form>
    </body>
</html>